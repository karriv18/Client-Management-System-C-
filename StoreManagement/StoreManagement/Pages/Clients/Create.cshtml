@page
@model StoreManagement.Pages.Clients.CreateModel
@{
}
<h2>New Client</h2>
@if (Model.ErrorMessage.Length > 0){
    <div class="alert alert-warning alert-dismissible fade show">
        <strong>@Model.ErrorMessage</strong>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="close"></button>
    </div>
}
<form method="post">
    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">Name</label>
        <div class="col-sm-6">
            <input type="text" class="form-control" name="name" value="@Model.clientInfo.getName()"/>
        </div>
    </div>
    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">Email</label>
        <div class="col-sm-6">
            <input type="email" class="form-control" name="email" value="@Model.clientInfo.getEmail()" />
        </div>
    </div>
    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">Phone</label>
        <div class="col-sm-6">
            <input type="text" class="form-control" name="phone" value="@Model.clientInfo.getPhone()" />
        </div>
    </div>
    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">Address</label>
        <div class="col-sm-6">
            <input type="text" class="form-control" name="address" value="@Model.clientInfo.getAddress()" />
        </div>
    </div>
   @if (Model.SuccessMessage.Length > 0){
       <div class="row mb-3">
           <div class="col-sm-9">
               <div class="alert alert-success alert-dismissible fade show" role="alert">
                   <strong>@Model.SuccessMessage</strong>
                   <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
               </div>
           </div>
       </div>
   }
    <div class="row mb-3">
        <div class="offset-sm-3 col-sm-3 d-grid">
            <input class="btn btn-primary" type="submit" value="Insert" />

        </div>
        <div class="col-sm-3 d-grid">
            <a class="btn btn-outline-primary" href="/" role="button">Cancel</a>
        </div>
    </div>
</form>